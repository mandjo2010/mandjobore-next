{
  "name": "mandjobore-next",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "npm run copy:content && next dev",
    "build": "npm run copy:content && next build",
    "start": "next start",
    "copy:content": "node scripts/copy-content.js",
    "prepare": "husky",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:clean": "rm -rf .eslintcache .next/cache/eslint && eslint .",
    "lint:ci": "eslint . --max-warnings=0",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ci": "vitest run --reporter=dot --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "release": "semantic-release",
    "release:dry": "semantic-release --dry-run"
  },
  "dependencies": {
    "@emotion/cache": "^11.14.0",
    "@emotion/react": "^11.14.0",
    "@emotion/server": "^11.11.0",
    "@emotion/styled": "^11.14.1",
    "@mdx-js/loader": "^3.1.0",
    "@mdx-js/react": "^3.1.0",
    "@mui/icons-material": "^7.3.1",
    "@mui/material": "^7.3.1",
    "@next/mdx": "^15.4.6",
    "@tailwindcss/line-clamp": "^0.4.4",
    "@tailwindcss/typography": "^0.5.16",
    "@types/marked": "^5.0.2",
    "@types/nodemailer": "^6.4.17",
    "clsx": "^2.1.1",
    "color": "^5.0.0",
    "date-fns": "^4.1.0",
    "fuse.js": "^7.1.0",
    "gray-matter": "^4.0.3",
    "highlight.js": "^11.11.1",
    "lucide-react": "^0.539.0",
    "marked": "^16.1.2",
    "next": "15.4.6",
    "next-themes": "^0.4.6",
    "nodemailer": "^7.0.5",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-markdown": "^10.1.0",
    "react-share": "^5.2.2",
    "reading-time": "^1.5.0",
    "remark-gfm": "^4.0.1",
    "tailwind-merge": "^3.3.1",
    "zustand": "^5.0.7"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/eslintrc": "^3",
    "@eslint/js": "^9.33.0",
    "@next/eslint-plugin-next": "^15.4.6",
    "@playwright/test": "^1.54.2",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20.19.10",
    "@types/react": "^19.1.9",
    "@types/react-dom": "^19.1.7",
    "eslint": "^9",
    "eslint-config-next": "15.4.6",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "fs-extra": "^11.3.1",
    "globals": "^16.3.0",
    "prettier": "^3.6.2",
    "typescript": "^5",
    "typescript-eslint": "^8.39.0"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-git"
    }
  }
}
