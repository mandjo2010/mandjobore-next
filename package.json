{
  "name": "mandjobore-next",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "npm run copy:content && next dev",
    "build": "npm run copy:content && next build",
    "build:analyze": "ANALYZE=true npm run build",
    "bundle:check": "node scripts/analyze-bundle.js",
    "start": "next start",
    "copy:content": "node scripts/copy-content.js",
    "prepare": "husky",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:clean": "rm -rf .eslintcache .next/cache/eslint && eslint .",
    "lint:ci": "eslint . --max-warnings=0",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ci": "vitest run --reporter=dot --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "release": "semantic-release",
    "release:dry": "semantic-release --dry-run"
  },
  "dependencies": {
    "@emotion/cache": "^11.14.0",
