    "fuse.js": "^7.1.0",
    "gray-matter": "^4.0.3",
    "highlight.js": "^11.11.1",
    "lucide-react": "^0.539.0",
    "marked": "^16.1.2",
    "next": "15.4.6",
    "next-themes": "^0.4.6",
    "nodemailer": "^7.0.5",
    "react": "19.1.0",
    "react-custom-scrollbars-2": "^4.5.0",
